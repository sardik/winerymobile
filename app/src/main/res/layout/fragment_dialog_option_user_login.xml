<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    app:cardBackgroundColor="@color/colorPrimary"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/default_margin_small"
    tools:context=".ui.DialogOptionUserLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/default_margin_small"
            android:layout_marginTop="@dimen/default_margin_small"
            android:layout_marginEnd="@dimen/default_margin_small">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:text="Login Sebagai"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/default_margin_medium">

                <RelativeLayout
                    android:id="@+id/sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_size_14"
                        android:text="Sales"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="@dimen/default_ic_size_medium"
                        android:layout_height="@dimen/default_ic_size_medium"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_arrow_left"
                        android:rotation="180"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/verifikator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Verifikator"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_size_14"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="@dimen/default_ic_size_medium"
                        android:layout_height="@dimen/default_ic_size_medium"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_arrow_left"
                        android:rotation="180"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/juru_tulis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Juru Tulis"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_size_14"
                        android:textColor="@android:color/white"/>

                    <ImageView
                        android:layout_width="@dimen/default_ic_size_medium"
                        android:layout_height="@dimen/default_ic_size_medium"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_arrow_left"
                        android:rotation="180"/>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>