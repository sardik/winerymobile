<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CreditCardSubmission.BankSubmissionForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/AppTheme">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Bank Pengajuan"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/default_margin_small"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_16"/>

                <ImageView
                    android:id="@+id/toolbar_title"
                    android:layout_width="@dimen/default_ic_size_large"
                    android:layout_height="@dimen/default_ic_size_large"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:src="@drawable/logo_white"
                    android:layout_marginEnd="@dimen/default_margin_small"
                    android:layout_gravity="end"/>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_medium"
            android:layout_marginEnd="@dimen/default_margin_medium"
            android:scrollbars="none">

            <LinearLayout
                android:paddingTop="@dimen/default_margin_small"
                android:paddingBottom="@dimen/default_margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_bri"
                    android:layout_marginTop="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/tv_name_bank"
                            android:id="@+id/tv_bank_bri"
                            android:text="BRI"/>

                        <ImageView
                            android:id="@+id/iv_bri"
                            style="@style/iv_checked_bank"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_bni"
                    android:layout_marginTop="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/tv_name_bank"
                            android:id="@+id/tv_bank_ni"
                            android:text="BNI"/>

                        <ImageView
                            android:id="@+id/iv_bni"
                            style="@style/iv_checked_bank"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_bca"
                    android:layout_marginTop="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/tv_name_bank"
                            android:id="@+id/tv_bank_bca"
                            android:text="BCA"/>

                        <ImageView
                            android:id="@+id/iv_bca"
                            style="@style/iv_checked_bank"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_cimb"
                    android:layout_marginTop="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        style="@style/tv_name_bank"
                        android:id="@+id/tv_bank_cimb"
                        android:text="CIMB NIAGA"/>

                    <ImageView
                        android:id="@+id/iv_cimb"
                        style="@style/iv_checked_bank"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_mayapada"
                    android:layout_marginTop="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/tv_name_bank"
                            android:id="@+id/tv_bank_mayapada"
                            android:text="MAYAPADA"/>

                        <ImageView
                            android:id="@+id/iv_mayapada"
                            style="@style/iv_checked_bank"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_dbs"
                    android:layout_marginTop="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/tv_name_bank"
                            android:id="@+id/tv_bank_dbs"
                            android:text="DBS"/>

                        <ImageView
                            android:id="@+id/iv_dbs"
                            style="@style/iv_checked_bank"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_mnc"
                    android:layout_marginTop="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/tv_name_bank"
                            android:id="@+id/tv_bank_mnc"
                            android:text="MNC"/>

                        <ImageView
                            android:id="@+id/iv_mnc"
                            style="@style/iv_checked_bank"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_uob"
                    android:layout_marginTop="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/tv_name_bank"
                            android:id="@+id/tv_bank_uob"
                            android:text="UOB"/>

                        <ImageView
                            android:id="@+id/iv_uob"
                            style="@style/iv_checked_bank"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_mega"
                    android:layout_marginTop="@dimen/default_margin_small"
                    android:layout_marginBottom="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/tv_name_bank"
                            android:id="@+id/tv_bank_mega"
                            android:text="MEGA"/>

                        <ImageView
                            android:id="@+id/iv_mega"
                            style="@style/iv_checked_bank"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bank_panin"
                    android:layout_marginBottom="@dimen/default_margin_small"
                    style="@style/card_bank_selection">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/tv_name_bank"
                            android:id="@+id/tv_bank_panin"
                            android:text="PANIN"/>

                        <ImageView
                            android:id="@+id/iv_panin"
                            style="@style/iv_checked_bank"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_next"
                    style="@style/default_button"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="@dimen/default_margin_small"
                    android:layout_marginEnd="@dimen/default_margin_small"
                    app:backgroundTint="@color/colorPrimary"
                    app:rippleColor="@color/deep_purple_200"
                    android:text="Selanjutnya"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_back"
                    style="@style/button_back"
                    app:backgroundTint="@android:color/white"
                    android:textColor="@android:color/black"
                    android:drawableTint="@android:color/black"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>