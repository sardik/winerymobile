<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_recontest_detail_profession_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:strokeColor="@android:color/black"
        app:cardCornerRadius="@dimen/default_padding_medium"
        app:strokeWidth="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/default_margin_small"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_14"
                android:layout_alignParentStart="true"
                android:text="Data Pekerjaan"/>

            <ImageView
                android:id="@+id/ivChevronDetailProfessionData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_expand_more_black_24dp"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:id="@+id/parent_container_item_data_profession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_container_item_data_card"
        android:visibility="gone"
        android:layout_marginTop="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_small"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/default_margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Nama Perusahaan"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_company_name"
                style="@style/text_input_basic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_company_name"
                    style="@style/edit_text_input"
                    android:hint="Nama Perusahaan"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_marginTop="@dimen/default_margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Alamat Perusahaan"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_company_address"
                style="@style/text_input_basic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_company_address"
                    style="@style/edit_text_input"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:lines="4"
                    android:hint="Alamat Perusahaan"
                    android:gravity="top"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_marginTop="@dimen/default_margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Nomor telpon kantor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_company_phone"
                    style="@style/text_input_basic"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_company_phone"
                        style="@style/edit_text_input"
                        android:maxLength="13"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="@dimen/default_margin_small"
                    android:layout_height="match_parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_company_phone_ext"
                    style="@style/text_input_basic"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_company_phone_ext"
                        style="@style/edit_text_input"
                        android:hint="EXT"
                        android:maxLength="4"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>



            <TextView
                android:layout_marginTop="@dimen/default_margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Jabatan"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_company_jabatan"
                style="@style/text_input_basic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_company_jabatan"
                    style="@style/edit_text_input"
                    android:hint="Jabatan"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_marginTop="@dimen/default_margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Bagian"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_company_bagian"
                style="@style/text_input_basic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_company_bagian"
                    style="@style/edit_text_input"
                    android:hint="Bagian"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>